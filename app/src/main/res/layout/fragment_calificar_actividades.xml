<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context="com.comparte.labsanisidro.compartesanisidro.CalificaActividades.CalificarActividadesFragment">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/califica_actividades">

    </LinearLayout>


    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view_calificar"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2.25"></android.support.v7.widget.RecyclerView>



</LinearLayout>
