<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:weightSum="3"
    tools:context="com.comparte.labsanisidro.compartesanisidro.CalificarActividadesFragment">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/califica_actividades">

    </LinearLayout>

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.design.widget.TabLayout
            android:id="@+id/datos_tabs"
            android:background="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </android.support.design.widget.TabLayout>
    </android.support.design.widget.AppBarLayout>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/yoga"
            tools:layout_editor_absoluteY="38dp"
            tools:layout_editor_absoluteX="0dp"
            android:id="@+id/imageView5" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Asististe a Yoga en el Olivar"
            android:layout_marginStart="8dp"
            app:layout_constraintLeft_toRightOf="@+id/imageView6"
            app:layout_constraintBottom_toTopOf="@+id/imageView5"
            android:layout_marginBottom="8dp" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Calificar"
            android:backgroundTint="@color/verde_san_isidro"
            android:textColor="@android:color/white"
            tools:layout_editor_absoluteY="236dp"
            tools:layout_editor_absoluteX="82dp"
            android:id="@+id/button2" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Compartir"
            android:backgroundTint="@color/verde_san_isidro"
            android:textColor="@android:color/white"
            tools:layout_editor_absoluteY="236dp"
            tools:layout_editor_absoluteX="187dp" />

        <ImageView
            android:layout_width="46dp"
            android:layout_height="38dp"
            android:src="@mipmap/ic_launcher"
            app:layout_constraintLeft_toLeftOf="@+id/imageView5"
            app:layout_constraintBottom_toTopOf="@+id/imageView5"
            android:id="@+id/imageView6" />
    </android.support.constraint.ConstraintLayout>



</LinearLayout>
