<android.support.v7.widget.CardView android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/tools"
    card_view:cardUseCompatPadding="true"
    card_view:cardCornerRadius="8dp"
    android:layout_marginBottom="16dp"
    android:id="@+id/cardview_calificar"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/cardview_foto_actividad"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/yoga"/>

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:civ_border_width="20dp"
                app:civ_border_color="#FF000000"
                android:id="@+id/cardview_foto_perfil"
                android:src="@mipmap/ic_launcher"/>
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/cardview_evento_textview_nombre_actividad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Yoga en el Olivar"
                android:layout_centerInParent="true"
                style="@style/Base.TextAppearance.AppCompat.Headline"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="1dp"
                android:textColor="@android:color/white"
                android:background="@color/verde_san_isidro"
                android:text="Compartir"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@android:color/white"
                android:layout_margin="1dp"
                android:background="@color/verde_san_isidro"
                android:text="Calificar"/>

        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>